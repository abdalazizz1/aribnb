<div class="jumbotron">
  <h1 class="display-4">
    <%= @listing.title_name %></h1>
  <p class="lead">Address:
    <%= @listing.address %><br/>
    Price/night:
    <%= @listing.price_per_day %><br/>
    Type:
    <%= @listing.listing_type %></p>
  <hr class="my-4">
  <p>Number of bedrooms:
    <%= @listing.bedrooms %><br/>
    Number of beds:
    <%= @listing.beds %><br/>
    Number of bathrooms:
    <%= @listing.bathrooms %></p>
  <hr class="my-4">
  <p class="lead">
    <%= link_to 'Book now' , new_listing_reservation_path(@listing) , class:"btn btn-primary btn-lg" %>
  </p>
</div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width: 400px; margin: 0 auto">
  <div class="carousel-inner">
    <% @listing.images.each_with_index do |img , index| %>
      <div class="carousel-item <%= index == 0 ? 'active' : nil %>">
        <%= image_tag (img.url), :class => "image" %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<hr/>
<%= link_to 'Back' , listings_path %>
<%= link_to 'Edit' , edit_listing_path(@listing.id) %>
<%= link_to 'Delete' , listing_path(@listing.id) ,
        method: :delete,
        data: { confirm: 'Are you sure?' }%>