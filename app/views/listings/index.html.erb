<% if signed_in? && @listings.present? %>
  <strong>
    <h1>All listings</h1>
  </strong>
  <br/>
  <% @listings.each do |listing|%>
    <p>Name:
      <%= listing.title_name %>
    </p>
    <p>Address: 
      <%= listing.address %>
    </p>
    <p>Type: 
      <%= listing.listing_type %>
    </p>
    <p>Number of Bedrooms: 
      <%= listing.bedrooms %>
    </p>
    <p>Number of beds: 
      <%= listing.beds %>
    </p>
    <p>Number of bathrooms: 
      <%= listing.bathrooms %>
    </p>
    <p> Price/per night:
      <%= listing.price_per_day %>
    </p>
    <p>
      <%= listing.tags %>
    </p>
    <%= link_to 'Show' , listing_path(listing.id) %>
    <%= link_to 'Edit' , edit_listing_path(listing.id) %>
    <%= link_to 'Delete' , listing_path(listing.id) , 
        method: :delete,
        data: { confirm: 'Are you sure?' }%>
  <%end%>
  <hr/>
<% elsif !@listings.present?%>
  <h1> You dont have any listings</h1>
  <%= link_to 'Add Listing' , new_listing_path %>
<% end %>